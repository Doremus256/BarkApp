{{!-- Website Header --}}
<h1 class="text-white ml-5 mt-2">Stock Watch Inventory Manager</h1>

<br>
<hr>

{{!-- UPDATE Button on upper part of page - updates item_QOH within INVENTORY OVERFLOW WINDOW--}}

<div class="container-fluid">
  <div class="row mx-5">
    {{!-- Select item from inventory (dropdown menu) that has been used --}}
    <div class="col-12-sm mx-5 shadow-lg">
      <div class="btn-group">
        <button class="btn btn-secondary btn-lg dropdown-toggle" type="button" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          Item Used
        </button>
        <div class="dropdown-menu">
          ...
        </div>
      </div>
    </div>
    <div class="col-12-sm mx-5">
      {{!-- Quantity of Item Used --}}
      <div class="col-12-sm mx-5 px-3 py-2 bg-secondary rounded text-white shadow-lg">
        <label for="quantityUsed">Quantity Used</label>
        <input class="rounded border border-secondary" type="number" min="0" max="100000.00" step="0"
          name="quantityUsed" id="quantityUsed" required="required">
      </div>
    </div>
    <div class="col-12-sm mx-5 px-3 pt-2 bg-secondary rounded text-white shadow-lg">
      <label for="price">Price</label>
      <input class="rounded border border-secondary" type="number" min="0.00" max="100000.00" step="0.01" name="price"
        id="price" required="required">
    </div>
    <input class="btn btn-info mx-5 px-5" type="button" value="Update">
  </div>
</div>

<br>
<hr>

{{!-- ADD A NEW ITEM TO INVENTORY include vendor selection from dropdown menu --}}

<form class="form-inline">
  <div class="bg-secondary mx-2 px-2 py-2 form-group mb-2 rounded shadow-lg text-white">
    <label class="mx-2" for="item_name">Item: </label>
    <input type="text" class="form-control" id="item_name">
  </div>
  <div class="bg-secondary mx-2 px-2 py-2 form-group mb-2 rounded shadow-lg text-white">
    <label class="mx-2" for="item_QOH">Quantity: </label>
    <input type="text" class="form-control" id="item_QOH">
  </div>
  <div class="bg-secondary mx-2 px-2 py-2 form-group mb-2 rounded shadow-lg text-white">
    <label class="mx-2" for="item_description">Description: </label>
    <input type="text" class="form-control" id="item_description">
  </div>
  <div class="bg-secondary mx-2 px-2 py-2 form-group mb-2 rounded shadow-lg text-white">
    <label class="mx-2" for="item_price">Price: </label>
    <input type="text" class="form-control" id="item_price">
  </div>
  <div class="bg-secondary mx-2 px-2 py-2 form-group mb-2 rounded shadow-lg text-white">
    <label class="mx-2" for="VendorId">Vendor ID:</label>
    <input type="text" class="form-control" id="VendorId">
  </div>
  <button type="submit" id="addInventory" class="btn btn-info mb-2">Add Item To Inventory</button>
</form>
</div>

<br>
<hr>

{{!-- INVENTORY LIST displaying inside OVERFLOW --}}

<div class="row">
  <div class="col-7 bg-secondary mx-5 shadow-lg rounded text-white">
    <div class="row shadow-lg">
      <div class="col-10">
        <div class="row overflow-auto rounded">
          {{#each dbItems}}
          <div class="col-4">
            <p>{{this.item_name}} </p>
          </div>
          <div class="col-4">
            <p>{{this.item_QOH}}</p>
          </div>
          <div class="col-2"> <button type="button" data-itemid="{{this.VendorId}}" class="btn btn-info btn-sm"
              id="sourceBtn">Source Info</button></div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>

{{!-- LINKED TO SOURCE INFO BUTTON - Displays the Vendors that stock a particular ITEM by item ID --}}

  <div class="col-4 ml-3">
    {{!-- This is where vendors appear --}}
    <div class="row col-5 mr-3 overflow-auto bg-secondary shadow-lg text-white rounded">
    </div>

    </br>

  {{!-- Budget Section --}}

    <div class="form-group mx-sm-3 mb-2">
      {{!-- User inputs total procurement budget --}}
      <label class="p-2 bg-secondary text-white rounded" for="budgetTotal">Monthly Budget</label>
      <input type="text" class="form-control" id="budgetTotal">
    </div>
    {{!-- Displays Remaining Budget, after user clicks UPDATE button --}}
    <div class="row col-5 mr-3 bg-secondary shadow-lg text-white rounded">
    </div>
  </div>
</div>